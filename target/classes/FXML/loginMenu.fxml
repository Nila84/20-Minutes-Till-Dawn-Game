<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.menu.LoginMenu"
            stylesheets="@../CSS/commonStyles.css"
            styleClass="Background"
            prefHeight="700.0" prefWidth="700.0">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <HBox alignment="CENTER" spacing="40">
                <Label text="Username" />
                <TextField promptText="username" fx:id="usernameField" />
            </HBox>
            <HBox alignment="CENTER" spacing="40">
                <Label text="Password" />
                <PasswordField promptText="password" fx:id="passwordField" />
            </HBox>
            <Button text="Login" onMouseClicked="#login"/>
            <Hyperlink text="Don't have an account? Create a new one" onMouseClicked="#goToRegister"/>
            <Hyperlink text="If you forgot the pass click here!" onMouseClicked="#forgotPassword"/>
            <Hyperlink text="Play as a guest" onMouseClicked="#playAsGuest"/>
        </VBox>
    </center>
</BorderPane>

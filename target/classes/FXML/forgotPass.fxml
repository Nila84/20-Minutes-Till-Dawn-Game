<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.menu.findPassword"
            stylesheets="@../CSS/commonStyles.css"
            styleClass="Background"
            prefHeight="700.0" prefWidth="700.0">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <HBox alignment="CENTER" spacing="40">
                <Label text="Username" />
                <TextField promptText="Enter your username" fx:id="usernameField" />
            </HBox>
            <HBox alignment="CENTER" spacing="40">
                <Label text="Favorite Color" />
                <TextField promptText="Enter your favorite color" fx:id="favoriteColorField" />
            </HBox>
            <HBox alignment="CENTER" spacing="40">
                <Label text="New Password" />
                <PasswordField promptText="Enter new password" fx:id="newPasswordField" />
            </HBox>
            <Button onMouseClicked="#findPassbyQuestion" text="Reset Password" />
            <Button text="Back to Login" onMouseClicked="#backToLogin" />
        </VBox>
    </center>
</BorderPane>
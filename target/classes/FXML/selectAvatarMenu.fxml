<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:id="avatarPane" prefHeight="700.0" prefWidth="700.0" styleClass="Background"
            stylesheets="@../CSS/commonStyles.css" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.menu.SelectAvatarMenu">

    <top>
        <VBox alignment="CENTER" spacing="40">
            <GridPane prefHeight="291.0" prefWidth="354.0" scaleX="0.75" scaleY="0.75" >
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <ImageView fitHeight="150.0" fitWidth="115.0" pickOnBounds="true"
                               preserveRatio="true" fx:id="avatar1">
                        <image>
                            <Image url="@../images/Avatars/1.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="150.0" fitWidth="115.0" pickOnBounds="true"
                               preserveRatio="true" GridPane.columnIndex="1" fx:id="avatar2">
                        <image>
                            <Image url="@../images/Avatars/2.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="150.0" fitWidth="115.0" pickOnBounds="true"
                               preserveRatio="true" GridPane.columnIndex="2" fx:id="avatar3">
                        <image>
                            <Image url="@../images/Avatars/3.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="150.0" fitWidth="115.0" pickOnBounds="true"
                               preserveRatio="true" GridPane.columnIndex="3" fx:id="avatar4">
                        <image>
                            <Image url="@../images/Avatars/4.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="150.0" fitWidth="115.0" pickOnBounds="true"
                               preserveRatio="true" GridPane.rowIndex="1" fx:id="avatar5">
                        <image>
                            <Image url="@../images/Avatars/5.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="150.0" fitWidth="115.0" pickOnBounds="true"
                               preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="avatar6">
                        <image>
                            <Image url="@../images/Avatars/6.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="150.0" fitWidth="115.0" pickOnBounds="true"
                               preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="avatar7">
                        <image>
                            <Image url="@../images/Avatars/7.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="150.0" fitWidth="115.0" pickOnBounds="true"
                               preserveRatio="true" GridPane.columnIndex="3" GridPane.rowIndex="1" fx:id="avatar8">
                        <image>
                            <Image url="@../images/Avatars/8.png" />
                        </image>
                    </ImageView>
                </children>
            </GridPane>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                       preserveRatio="true" fx:id="selectedAvatar">
                <image>
                    <Image fx:id="avatar" url="@../images/Avatars/message.png" />
                </image>
            </ImageView>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Back" onMouseClicked="#back" />
                <Button text="Register" onMouseClicked="#Register" fx:id="registerButton"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Button styleClass="bigButton" text="Choose From File" fx:id="chooseAvatarFromFileButton" />
                <Button styleClass="bigButton" text="Random Avatar" fx:id="randomAvatarButton" />
            </HBox>
        </VBox>
    </top>

</BorderPane>


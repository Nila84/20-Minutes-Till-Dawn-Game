<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.menu.ProfileMenu"
            stylesheets="@../CSS/commonStyles.css"
            styleClass="Background"
            prefHeight="700.0" prefWidth="700.0">
    <center>
        <VBox alignment="CENTER" spacing="40" styleClass="profileMenuButton">
            <HBox alignment="CENTER" spacing="20">
                <Label fx:id="usernameLabel" />
                <TextField fx:id="usernameField"/>
            </HBox>
            <Button fx:id="changeUsernameButton" onMouseClicked="#changeUsername"/>
            <HBox alignment="CENTER" spacing="20">
                <Label fx:id="passwordLabel" />
                <PasswordField fx:id="passwordField"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Label fx:id="confirmationLabel" />
                <PasswordField fx:id="confirmationField"/>
            </HBox>
            <Button fx:id="changePasswordButton" onMouseClicked="#changePassword"/>
            <Button fx:id="logoutButton" onMouseClicked="#logout"/>
            <Button fx:id="deleteAccountButton" onMouseClicked="#deleteAccount"/>
            <Button fx:id="changeAvatarButton" onMouseClicked="#changeAvatar"/>
            <Button fx:id="backButton" onMouseClicked="#back" />
        </VBox>
    </center>
</BorderPane>
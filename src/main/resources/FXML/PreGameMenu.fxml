<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.menu.PreGameMenu"
            stylesheets="@../CSS/commonStyles.css"
            styleClass="Background"
            prefHeight="700.0" prefWidth="700.0">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <VBox fx:id="heroesBox" alignment="CENTER" spacing="10"/>
            <VBox fx:id="weaponsBox" alignment="CENTER" spacing="10"/>
            <Slider fx:id="timeSlider"/>
            <Label fx:id="timeLabel"/>
            <Button fx:id="startButton" onAction="#startGame"/>
            <Button fx:id="backButton" onAction="#back"/>
        </VBox>
    </center>
</BorderPane>